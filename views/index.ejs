                <button type="submit">Search</button>
            </form>
        </div>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Edit User</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editUserForm" enctype="multipart/form-data">
                        <input type="hidden" id="editUserId" name="userId" />
                        <label for="editUsername">Username:</label>
                        <input type="text" id="editUsername" name="username" /><br /><br />

                        <label for="editUserProfile">User Profile:</label>
                        <input class="p-0" style="border: none; outline: none; background-color: #a1d6e2;" type="text" id="profile" name="profile" readonly />
                        <input class="custom-file" type="file" id="editUserProfile" name="userProfile" /><br /><br />

                        <label for="editEmail">Email:</label>
                        <input type="email" id="editEmail" name="email" /><br /><br />

                        <label for="editPhone">Phone:</label>
                        <input type="text" id="editPhone" name="phone" /><br /><br />

                        <button type="submit">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <h2>Users List</h2>

    <table border="1" id="usersTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>User Profile</th>
                <th>Username</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
          
    </table>

    <div class="pagination">
      
      </div>
      

    <script src="/js/index.js"></script>
    <script>
        function toast(data, color = "rounded") {
            let toastHTML = `
    <div class="toast-content">
        <span>${data}</span>
        <span class="toast-dismiss" onclick="dismissToast()">X</span>
    </div>
    <div class="toast-progress"></div>
    `;
            let toastElement = M.toast({
                html: toastHTML,
                displayLength: 3000,
                classes: color,
            });
        }

        function dismissToast() {
            let toasts = document.querySelectorAll(".toast");
            toasts.forEach((toast) => toast.remove());
        }

        function greenToast(message) {
            toast(message, "green-toast");
        }
    </script>
</body>

